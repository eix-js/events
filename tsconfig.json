{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "alwaysStrict": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "target": "ESNext",
        "outDir": "dist",
        "declaration": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}